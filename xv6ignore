#!/bin/bash

cd $(dirname $0)

git status --porcelain | grep '^??' | cut -c4- >> ~/CS333/.gitignore
if [[ $(git status --short | grep '.gitignore') ]]; then
  echo 'auto-commiting changes to .gitignore'
  git commit -am 'ignore untracked files generated from makefile'
  echo 'Untracked files ignored'
else
  echo '.gitignore not changed, no new files found'
fi
